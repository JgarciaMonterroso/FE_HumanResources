@code {
    private UserModel? userModel = new UserModel();
    string username = "";
    bool editingEnable = false;
    private void editing(bool edit) => editingEnable = edit;
    protected override async Task OnInitializedAsync()
    {
        string? usr = await LocalStorage.GetItemAsync<string>("logedUser");
        string? jwt = await LocalStorage.GetItemAsync<string>("jwt");

        if (!string.IsNullOrEmpty(usr) && !string.IsNullOrEmpty(jwt))
        {
            UserModel? logedUser = JsonConvert.DeserializeObject<UserModel>(usr);
            if (logedUser != null)
            {
                Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", jwt);
                HttpResponseMessage response = await Http.PostAsJsonAsync("api/User/GetUser", new { Uuid = logedUser.Uuid });
                if (response.IsSuccessStatusCode)
                {
                    string content = response.Content.ReadAsStringAsync().Result;
                    userModel = JsonConvert.DeserializeObject<UserModel>(content);
                }
            }
        }
        else
        {
            NavigationManager.NavigateTo("login", true);
        }
    }
    private async void UpdateUser()
    {
        string? jwt = await LocalStorage.GetItemAsync<string>("jwt");
        if (userModel != null && !string.IsNullOrEmpty(jwt))
        {
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", jwt);
            HttpResponseMessage response = await Http.PostAsJsonAsync("api/User/UpdateUser", userModel);
            if (response.IsSuccessStatusCode)
            {
                string content = response.Content.ReadAsStringAsync().Result;
                UserModel? updatedUser = JsonConvert.DeserializeObject<UserModel>(content);
                if (updatedUser != null)
                {
                    userModel = updatedUser;
                    string messageInfo = $"Se actualizao la información con exito";
                    toastService.ShowSuccess(messageInfo);

                    editing(false);
                }
            }
            editing(false);
        }
    }

    private void ReturnMenu()
    {
        editing(false);
        NavigationManager.NavigateTo($"dashboard", true);
    }

