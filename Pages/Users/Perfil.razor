                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="" class="form-label">Apellidos</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.LastName" />
                                <ValidationMessage For="(()=> userModel.LastName)"></ValidationMessage>
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Telefono</label>
                                <InputNumber class="form-control bg-transparent"  @bind-Value="userModel.Phone" />
                                <ValidationMessage For="(()=> userModel.Phone)"></ValidationMessage>
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Correo</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.Email" disabled readonly />
                                <ValidationMessage For="(()=> userModel.Email)"></ValidationMessage>
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Departamento</label>
                                <InputText   class="form-control bg-transparent"  @bind-Value="userModel.Department" />
                                <ValidationMessage For="(()=> userModel.Department)"></ValidationMessage>
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Fecha de nacimiento</label>
                                <InputDate class="form-control bg-transparent" @bind-Value="userModel.DateOfBirth" />
                                <ValidationMessage For="(()=> userModel.DateOfBirth)"></ValidationMessage>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col">
                            <div class="mb-3">
                                <label for="" class="form-label">Nombres</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.UserName" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Genero</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.Gender" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Documento de identificacion</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.Identification" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Pais</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.Country" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Titulo</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.JobTitle" disabled readonly />
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="" class="form-label">Apellidos</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.LastName" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Telefono</label>
                                <InputNumber class="form-control bg-transparent"  @bind-Value="userModel.Phone" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Correo</label>
                                <InputText class="form-control bg-transparent"  @bind-Value="userModel.Email" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Departamento</label>
                                <InputText  class="form-control bg-transparent"  @bind-Value="userModel.Department" disabled readonly />
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Fecha de nacimiento</label>
                                <InputDate class="form-control bg-transparent"  @bind-Value="userModel.DateOfBirth" disabled readonly />
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col">
                <div class="row">
                    <div class="col">
                        @if(!editingEnable)
                        {
                            <div class="d-grid mb-10">
                                <button id="kt_sign_in_submit" class="btn btn-primary" @onclick="() => editing(true)">Editar</button>
                            </div>
                        }
                        else
                        {
                            <div class="d-grid mb-10">
                                <button id="kt_sign_in_submit" class="btn btn-success" type="submit">Guardar</button>
                            </div>
                            <div class="d-grid mb-10">
                                <button id="kt_sign_in_submit" class="btn btn-danger" @onclick="() => editing(false)">Cancelar</button>
                            </div>
                        }
                    </div>
                    <div class="col">

                    </div>
                </div>
            </div>
        </div>
    </EditForm>
</div>
<hr />

@code {
    private UserModel? userModel = new UserModel();
    string username = "";
    bool editingEnable = false;

    protected override async Task OnInitializedAsync()
    {
        string? usr = await LocalStorage.GetItemAsync<string>("logedUser");

        if (!string.IsNullOrEmpty(usr))
        {
            UserModel? logedUser = JsonConvert.DeserializeObject<UserModel>(usr);
            if (logedUser != null)
            {
                HttpResponseMessage response = await Http.PostAsJsonAsync("api/User/GetUser", new { Uuid = logedUser.Uuid });
                if (response.IsSuccessStatusCode)
                {
                    string content = response.Content.ReadAsStringAsync().Result;
                    userModel = JsonConvert.DeserializeObject<UserModel>(content);
                }
            }
        }
        else
        {
            NavigationManager.NavigateTo("login", true);
        }
    }

    private void editing(bool edit) => editingEnable = edit;

    private async void UpdateUser()
    {
        if (userModel != null)
        {
            HttpResponseMessage response = await Http.PostAsJsonAsync("api/User/UpdateUser", userModel);
            if (response.IsSuccessStatusCode)
            {
                string content = response.Content.ReadAsStringAsync().Result;
                UserModel? updatedUser = JsonConvert.DeserializeObject<UserModel>(content);
                if (updatedUser != null)
                {
                    userModel = updatedUser;
                    string messageInfo = $"Se actualizao la información con exito";
                    toastService.ShowSuccess(messageInfo);
                }
            }
        }
    }

}
